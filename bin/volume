#!/bin/bash

[[ -z $(pgrep checkvolume) ]] && checkvolume &

# requieres pamixer

case $1 in
--up)
  # Unmute
  pamixer -u >/dev/null
  # +2%
  pamixer -i 2 >/dev/null
  ;;
--down)
  # Unmute
  pamixer -u >/dev/null
  # -2%
  pamixer -d 2 >/dev/null
  ;;
--toggle)
  # Toggle mute
  pamixer -t >/dev/null
     ;;
esac

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="  "
elif [ "$vol" -lt "30" ]; then
	icon="  "
else
	icon=" 󰕾 "
fi

echo "$icon"
