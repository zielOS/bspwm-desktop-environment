(defwidget weather []
  (box 
    :class "weather"
    :spacing 10
    :space-evenly false
    (box
      :class "weather info"
      :hexpand true
      (box
        :space-evenly false 
        :orientation "v"
        (label 
          :class "weather desc" 
          :halign "start" 
          :text {weather.desc}
        )
        (label 
          :class "weather temp" 
          :halign "start" 
          :text "${weather.temp}Â°C"
        )
      )
      (box
        :class "weather city"
        :valign "end"
        :halign "end"
        (label :text {weather.city})
      )
    )
    (box 
      :class "weather icon" 
      (label 
        :class "icon" 
        :halign "end" 
        :valign "center" 
        :text {weather.icon} 
        :style "color: ${weather.color}"
      )
    )
  )
)